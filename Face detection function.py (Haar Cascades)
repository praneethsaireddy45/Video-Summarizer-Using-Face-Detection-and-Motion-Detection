from imports import *
import cv2

def detectfaces(frame_count, gray, first_frame, frame):
    # Minimum contour area to consider as motion
    threshold_area = 2000

    # Haar cascades â€“ relative paths
    cascPath = [
        os.path.join("models", "haarcascade_profileface.xml"),
        os.path.join("models", "haarcascade_frontalface_default.xml"),
    ]

    # Absolute difference for motion
    delta_frame = cv2.absdiff(first_frame, gray)
    # cv2.imshow('delta_frame', delta_frame)

    # Threshold
    thresh_frame = cv2.threshold(delta_frame, 60, 255, cv2.THRESH_BINARY)[1]
    # cv2.imshow('thresh', thresh_frame)

    # Clean up with dilation
    thresh_frame = cv2.dilate(thresh_frame, None, iterations=2)

    # Find contours
    cnts, _ = cv2.findContours(
        thresh_frame.copy(),
        cv2.RETR_EXTERNAL,
        cv2.CHAIN_APPROX_SIMPLE
    )

    motion = 0

    for contours in cnts:
        if cv2.contourArea(contours) < threshold_area:
            continue

        motion = 1

        # Loop through cascades
        for j in cascPath:
            if not os.path.exists(j):
                # If model missing, skip
                continue

            # Load cascade
            faceCascade = cv2.CascadeClassifier(j)

            # Detect faces
            faces = faceCascade.detectMultiScale(
                gray,
                scaleFactor=1.07,
                minNeighbors=10
            )

            if len(faces) != 0:
                for (x, y, w, h) in faces:
                    box = (x, y, w, h)
                    color = (0, 0, 255)
                    thickness = 2
                    cv2.rectangle(
                        frame,
                        (box[0], box[1]),
                        (box[0] + box[2], box[1] + box[3]),
                        color,
                        thickness,
                        cv2.LINE_AA
                    )
                return True, motion, frame

    return False, motion, frame
